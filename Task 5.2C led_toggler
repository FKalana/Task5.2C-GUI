import RPi.GPIO as GPIO
GPIO.setmode(GPIO.BOARD)
GPIO.setwarnings(False)
GPIO.setup(11, GPIO.OUT)
GPIO.setup(13, GPIO.OUT)
GPIO.setup(15, GPIO.OUT)
blue = GPIO.PWM(11, 100)
red = GPIO.PWM(13, 100)
yellow = GPIO.PWM(15, 100)

from PyQt5 import QtWidgets
from PyQt5.QtWidgets import QApplication, QMainWindow, QSlider
import sys

class MyWindow(QMainWindow):
		def __init__(self):
				super(MyWindow, self).__init__()
				self.setGeometry(600, 600, 600, 600)
				self.setWindowTitle("LED Toggle")
				self.initUI()
				
		def initUI(self):
				self.b = QtWidgets.QSlider(self)
				self.b.setValue(0)
				self.bText = QtWidgets.QLabel(self)
				self.bText.setText("Blue")
				self.bText.move(210,30)
				self.b.move(180,0)
				self.b.valueChanged.connect(self.blue)
				
				self.r = QtWidgets.QSlider(self)
				self.r.setValue(0)
				self.rText = QtWidgets.QLabel(self)
				self.rText.setText("Red")
				self.rText.move(340,30)
				self.r.move(180,10)
				self.r.valueChanged.connect(self.red)
				
				self.y = QtWidgets.QSlider(self)
				self.y.setValue(0)
				self.yText = QtWidgets.QLabel(self)
				self.yText.setText("Yellow")
				self.yText.move(300,0)
				
				self.e = QtWidgets.QPushButton(self)
				self.e.setText("Quit")
				
		def blue(self, value)
				blue.start(value)
				
		def red(self, value)
				red.start(value)
				
		def yellow(self. value)
		    	yellow.start(value)
		    	

def window():
		app = QApplication(sys.argv)
		win = MyWindow
		win.show()
		sys.exit(app.exec_())
		
window()
